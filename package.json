{
	"name": "graphql-schema-to-mcp-converter",
	"version": "1.0.0",
	"description": "This is a simple tool that converts a GraphQL schema to a MCP Server.",
	"main": "src/index.js",
	"type": "module",
	"scripts": {
		"check": "biome check .",
		"check:unsafe": "biome check --write --unsafe .",
		"check:write": "biome check --write .",
		"generate:schema": "graphql-codegen --config codegen-schema.ts && node scripts/post-process-schema.cjs",
		"generate:mcp-server": "NODE_OPTIONS='--loader ts-node/esm' node src/index.ts",
		"gen": "pnpm run generate:schema && pnpm run generate:mcp-server",
		"test": "vitest run"
	},
	"keywords": [],
	"author": "AgentReady",
	"license": "MIT",
	"packageManager": "pnpm@10.10.0",
	"dependencies": {
		"@graphql-tools/schema": "^10.0.23",
		"@modelcontextprotocol/sdk": "^1.11.0",
		"dotenv": "^16.5.0",
		"graphql": "^16.11.0",
		"graphql-codegen-typescript-validation-schema": "^0.17.1",
		"zod": "^3.24.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@graphql-codegen/cli": "5.0.6",
		"@graphql-codegen/introspection": "4.0.3",
		"@graphql-codegen/typescript": "4.1.6",
		"@graphql-codegen/typescript-resolvers": "4.5.1",
		"@types/dotenv": "^8.2.3",
		"@types/node": "^22.15.16",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"vitest": "^3.1.4"
	}
}
